
import random

subjects = [
    "Prime Minister",
    "Opposition Leader",
    "Bollywood Actor",
    "Famous Cricketer",
    "YouTuber",
    "Startup Founder"
]

actions = [
    "launches",
    "cancels",
    "dances with",
    "eats",
    "orders",
    "celebrates",
    "declares war on"
]

places_or_things = [
    "at Red Fort",
    "in Mumbai Local Train",
    "inside Parliament",
    "at Ganga Ghat",
    "during IPL Match",
    "at India Gate",
    "with a plate of samosa"
]

print("welcome to Fake Headline Generator ")


while True:
    subject = random.choice(subjects)
    action = random.choice(actions)
    thing = random.choice(places_or_things)

    headline = f"BREAKING NEWS: {subject} {action} {thing}!"
    print("\n" + headline)

    user_choice = input("\nDo you want another headline? (yes/no): ").strip().lower()
    if user_choice != "yes":
        print("\nThanks for using Fake Headline Generator!")
        break
